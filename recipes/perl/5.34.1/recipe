NAME='perl'
VERSION='5.34.1'
DIRECTORY='perl-5.34.1'
DEPENDENCIES='make=4.3'
FILENAME='perl-5.34.1.tar.gz'
SOURCE="https://www.cpan.org/src/5.0/$FILENAME"

build() {
	./Configure -des \
	-Dinstallprefix=$DESTDIR \
	-Dprefix=/usr \
	-Dvendorprefix=/usr \
	-Uinstallusrbinperl

	make -j$(nproc) V=1        
}

package() {
	make install
}
