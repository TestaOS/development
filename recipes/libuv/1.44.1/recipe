NAME='libuv'
VERSION='1.44.1'
DIRECTORY='libuv-v1.44.1'
DEPENDENCIES='libtool-2.4.6'
FILENAME='libuv-v1.44.1.tar.gz'
SOURCE="https://dist.libuv.org/dist/v1.44.1/$FILENAME"

build() {
	sh autogen.sh
	./configure \
	--prefix=/usr \
	--enable-static \
	--disable-shared

	make -j$(nproc) V=1
}

install() {
        make install DESTDIR="$DESTDIR"
}
