NAME='coreutils'
VERSION='9.0'
DIRECTORY='coreutils-9.0'
DEPENDENCIES=''
FILENAME='coreutils-9.0.tar.xz'
SOURCE="https://ftp.gnu.org/gnu/coreutils/$FILENAME"

build() {
	autoreconf -fiv

	FORCE_UNSAFE_CONFIGURE=1 ./configure --prefix=/usr

	make -j$(nproc) V=1
}

install() {
	make install DESTDIR="$DESTDIR"
}
