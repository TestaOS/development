NAME='libusb'
VERSION='1.0.25'
DIRECTORY='libusb-1.0.25'
DEPENDENCIES=''
FILENAME='libusb-1.0.25.tar.bz2'
SOURCE="https://github.com/libusb/libusb/releases/download/v1.0.25/$FILENAME"

build() {
	./configure --prefix=/usr --disable-udev
	make -j$(nproc) V=1
}

install() {
	make install DESTDIR="$DESTDIR"
}
