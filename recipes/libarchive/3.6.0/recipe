NAME='libarchive'
VERSION='3.6.0'
DIRECTORY='libarchive-3.6.0'
DEPENDENCIES=''
FILENAME='libarchive-3.6.0.tar.xz'
SOURCE="https://github.com/libarchive/libarchive/releases/download/v3.6.0/$FILENAME"

build() {
	./configure \
        --prefix=/usr \
        --enable-static \
        --disable-shared
                
        make -j$(nproc) V=1
}

install() {
        make install DESTDIR="$DESTDIR"
}
