NAME='font-bh-ttf'
VERSION='1.0.3'
DIRECTORY='font-bh-ttf-1.0.3'
DEPENDENCIES='util-macros-1.19.3 font-util-1.3.2 mkfontscale-1.2.2'
FILENAME='font-bh-ttf-1.0.3.tar.bz2'
SOURCE="https://www.x.org/pub/individual/font/$FILENAME"

build() {
	cp $ROOT/config.* "$SRCDIR/font-bh-ttf-1.0.3"

	./configure \
        --prefix=/usr

        make -j$(nproc) V=1
}
